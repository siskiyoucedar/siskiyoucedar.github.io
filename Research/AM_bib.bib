  shorttitle = {Data-{{Driven Decision Making}} in {{Response}} to the {{COVID-19 Pandemic}}},
  author = {Nel, Elmarie and MacLachlan, Andrew and Ballinger, Ollie and Cole, Hugh and Cole, Megan},
  date = {2023-01},
  journaltitle = {Sustainability},
  volume = {15},
  number = {3},
  pages = {1853},
