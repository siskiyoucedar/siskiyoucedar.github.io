@article{ballantyne2023,
  title = {‘{{There}} Is No Formula for Life and Career’: {{A}} Commentary on Perspectives and Experiences of Early Career Quantitative Human Geographers},
  shorttitle = {‘{{There}} Is No Formula for Life and Career’},
  author = {Ballantyne, Patrick and Sanderson, Rachael K. and Davies, Alec and Houlden, Victoria and MacLachlan, Andrew and Owen, Gwilym and Robinson, Caitlin and Shin, Hyesop and Wartmann, Flurina M. and Wilkin, Joanna and Williams, Isabel},
